<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/test_rl"
    android:background="#FEF5E3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#F9EEDE"
        app:layout_heightPercent="13%"
        >

        <ImageView
            android:id="@+id/home"
            android:onClick="showHome"
            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:src="@mipmap/shu"
            android:layout_marginLeft="20dp"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/xing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/xing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/xing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/huixing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/apple"
        android:src="@drawable/apple"
        app:layout_heightPercent="53%"
        app:layout_widthPercent="23%"
        app:layout_marginLeftPercent="39%"
        app:layout_marginTopPercent="14%"
        />

    <LinearLayout
        android:gravity="center"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="18%"
        app:layout_marginLeftPercent="41%"
        app:layout_marginTopPercent="73%"
        >

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/emptyText"
            android:textStyle="bold"
            android:textSize="@dimen/small_text"
            android:text="      "
            android:paddingBottom="10dp"
            android:textColor="#fff"
            android:background="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="bold"
            android:textSize="@dimen/small_text"
            android:text="pple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/text1"
        android:textStyle="bold"
        android:textSize="@dimen/big_text"
        app:layout_marginLeftPercent="13%"
        app:layout_marginTopPercent="10%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="a"
        android:textColor="#81624D"
        android:shadowColor="#ff000000"
        android:shadowRadius="1"
        android:shadowDx="0"
        android:shadowDy="5"
        android:elevation="5px"
        />

    <TextView
        android:id="@+id/text2"
        android:textStyle="bold"
        android:textSize="@dimen/big_text"
        app:layout_marginLeftPercent="13%"
        app:layout_marginTopPercent="53%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="b"
        android:textColor="#81624D"
        android:shadowColor="#ff000000"
        android:shadowRadius="1"
        android:shadowDx="0"
        android:shadowDy="5"
        android:elevation="5px"
        />


    <TextView
        android:id="@+id/text3"
        android:textStyle="bold"
        android:textSize="@dimen/big_text"
        app:layout_marginLeftPercent="76%"
        app:layout_marginTopPercent="10%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="o"
        android:textColor="#81624D"
        android:shadowColor="#ff000000"
        android:shadowRadius="1"
        android:shadowDx="0"
        android:shadowDy="5"
        android:elevation="5px"
        />

    <TextView
        android:id="@+id/text4"
        android:textStyle="bold"
        android:textSize="@dimen/big_text"
        app:layout_marginLeftPercent="76%"
        app:layout_marginTopPercent="53%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="e"
        android:textColor="#81624D"
        android:shadowColor="#ff000000"
        android:shadowRadius="1"
        android:shadowDx="0"
        android:shadowDy="5"
        android:elevation="5px"
        />




</android.support.percent.PercentRelativeLayout>